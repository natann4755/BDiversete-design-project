<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/bacroundEditText"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="28"
            >
            <TextView
                android:id="@+id/IOrasc_titel_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/EditTextWhait"
                android:textSize="19sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/IOrasc_Draft_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/IOrasc_titel_TV"
                android:layout_alignParentBottom="true"
                android:textSize="14sp"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/WhaitLiter"



                />
            <TextView
                android:id="@+id/IOrasc_id_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:textColor="@color/WhaitLiter"/>
        </RelativeLayout>


                <TextView
                    android:id="@+id/IOrasc_date_ouers_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="23"
                    android:textColor="@color/liteWhait"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"/>
            <TextView
                android:id="@+id/IOrasc_company_TV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:textSize="14sp"
                android:textColor="@color/liteWhait"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/IOrasc_task_TV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:textSize="14sp"
                android:textColor="@color/WhaitLiter"
                android:layout_marginTop="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:layout_marginBottom="2dp"
                android:background="@drawable/button_rectangel"
                android:text="Update Status"
                android:textColor="@color/EditTextWhait"
                android:textAllCaps="false"/>




        </LinearLayout>
    </LinearLayout>
</LinearLayout>